<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="00:00:00"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:text="Счастье"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:text="Здоровье"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:text="Бодрость"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:text="Сытость"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:text="Веселье"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonHappy"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:background="@drawable/baseline_volunteer_activism_24"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonHealth"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:background="@drawable/baseline_favorite_24"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonTired"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:background="@drawable/baseline_bedtime_24"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonHunger"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:background="@drawable/baseline_fastfood_24"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonBore"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:background="@drawable/baseline_videogame_asset_24"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progressBarHappy"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:minWidth="180dp" />

        <ProgressBar
            android:id="@+id/progressBarHealth"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:minWidth="180dp" />

        <ProgressBar
            android:id="@+id/progressBarTired"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:minWidth="180dp" />

        <ProgressBar
            android:id="@+id/progressBarHunger"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:minWidth="180dp" />

        <ProgressBar
            android:id="@+id/progressBarBore"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="center"
            android:minWidth="180dp" />
    </GridLayout>

